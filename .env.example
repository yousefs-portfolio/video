# Application Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000/api
CLIENT_URL=http://localhost:5173

# Database Configuration
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=video_platform
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password_123

# MongoDB
MONGODB_URI=mongodb://admin:secure_password_123@localhost:27017/video_analytics?authSource=admin

# TimescaleDB
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=video_metrics
TIMESCALE_USER=admin
TIMESCALE_PASSWORD=secure_password_123

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_password_123

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=30d

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=video-platform-assets
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# MinIO Configuration (for local development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=secure_password_123
MINIO_BUCKET=videos
MINIO_USE_SSL=false

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=Video Platform <noreply@videoplatform.com>

# Algolia Search (optional)
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key
ALGOLIA_INDEX_NAME=courses

# Sentry Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Video Processing
VIDEO_ENCODING_PRESET=hls_720p
VIDEO_MAX_UPLOAD_SIZE=5368709120  # 5GB in bytes
VIDEO_ALLOWED_FORMATS=mp4,mov,avi,mkv,webm

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_LIVE_STREAMING=false
ENABLE_OFFLINE_MODE=true

# Cache Configuration
CACHE_TTL_DEFAULT=3600  # 1 hour in seconds
CACHE_TTL_USER=1800    # 30 minutes
CACHE_TTL_COURSE=7200  # 2 hours

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_FORMATS=pdf,doc,docx,ppt,pptx,xls,xlsx

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m